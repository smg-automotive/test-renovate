{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchPackageNames": [
        "circleci/node",
        "node",
        "@types/node",
        "cimg/node"
      ],
      "matchManagers": ["dockerfile", "npm", "nvm"],
      "versioning": "node",
      "groupName": "node (lts-only)",
      "schedule": null,
      "automerge": true
    }
  ]
}
